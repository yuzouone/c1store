  margin-top: 20rpx;
}
.content .t_bottom{
  margin-top: 30rpx;
  display: flex;
  display:-webkit-flex;
  -ms-flex-direction: row;
  flex-direction:row;
  justify-content:space-between;
}
.content .t3{
  font-size:36rpx;
  color:#222222;
  margin-top: 8rpx;
}
.content .t4{
  width:70rpx;
  height:36rpx;
  border-radius: 6rpx;
