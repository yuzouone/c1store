/* pages/alreadypay/alreadypay.wxss */
page{
  width:100%;
  height:100%;
  padding-top:100rpx;
  background: #f5f5f5;
}
.head{
  width:100%;
  padding-top:20rpx;
  text-indent:20rpx;
  color:#222222;
  font-size:64rpx;
  position:fixed;
  top:0;
  left: 0;
  background: white;
}
.main{
  width:100%;
  display: flex;
  display:-webkit-flex;
  -ms-flex-direction: column;
  flex-direction:column;
  align-items:center;
  background: #f5f5f5;
  padding: 20rpx 0 0 0;
}
.main_top{
  width:96%;
  display: flex;
  display:-webkit-flex;
  -ms-flex-direction: row;
  flex-direction:row;
  justify-content:space-between;
  align-items: center;
  background: white;
  border-radius: 12rpx;
  padding: 20rpx 0 20rpx 0;

}
.main_top .date{
  font-size:40rpx;
  color:#444;
  margin-left:20rpx;
}
.date .date_text{
  font-size:20rpx;
}
.store{
  display: flex;
  display:-webkit-flex;
  -ms-flex-direction: row;
  flex-direction:row;
  justify-content:space-between;
  align-items: center;
}
.store image{
  width:38rpx;
  height:38rpx;

}
.store text{
  font-size:28rpx;
  color:#444444;
  margin-left:20rpx;
  margin-right:20rpx;
}
.content{
  width:96%;
  display: flex;
  display:-webkit-flex;
  -ms-flex-direction: row;
  flex-direction: row;
  justify-content:flex-start;
  align-items: center;
  background: white;
 
}
.content .left{
  width:140rpx;
  height:140rpx;
  margin-left:20rpx;
}
.content .right{
  width:450rpx;
  margin-left:38rpx;
  display: flex;
  display:-webkit-flex;
  -ms-flex-direction: column;
  flex-direction:column;
}
.content .t1{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size:36rpx;
  color:#444444;
  margin-top: 20rpx;
}
.content .t2{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size:24rpx;
  color:#888888;
  margin-top: 14rpx;
}
.content .t_bottom{
  margin-top: 20rpx;
  display: flex;
  display:-webkit-flex;
  -ms-flex-direction: row;
  flex-direction:row;
  justify-content:space-between;
}
.content .t3{
  font-size:36rpx;
  color:#222222;
}
.content .t4{
  width:70rpx;
  height:36rpx;
  border-radius: 6rpx;
  font-size:26rpx;
  color:#f5f5f5;
  background: #444444;
  text-align: center;
}