/* pages/main/main.wxss */
page{
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  align-items: center
}
.t1{
  font-size:30rpx;
  color:#666666;
  margin-top:50rpx;
}
.t2{
  font-size:26rpx;
  color:#666666;
}
.t3{
  font-size:26rpx;
  color:#666666;
  border-bottom: 1rpx solid #ccc;
}
.canvas_all{
  margin-top: 70rpx;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  align-items: center;
}
#canvas{
  width:600rpx;
  height:600rpx;
}
.motai{
  position:absolute;
  width:100%;
  height:100%;
  background: rgba(0,0,0,0.3);
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  align-items: center;
  
}
.content{
  width:94%;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  align-items: center;
  margin-top:220rpx;
  background: white;
  border-radius: 20rpx;
  overflow:hidden;
}
.content .p1{
  color:#222222;
  font-size: 36rpx;
  margin-top:40rpx;
  font-weight: bold;
}
.content .p2{
  color:#444444;
  font-size: 28rpx;
  margin-top:54rpx;
}
.content button{
  color:#222222;
  font-size: 36rpx;
  width:100%;
  background: #ffe800;
  margin-top:95rpx;
  padding:10rpx 0 10rpx 0;
  border-radius: 0;
 
}